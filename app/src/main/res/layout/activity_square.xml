<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/a_square_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/a_square_seek"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:id="@+id/a_square_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/stats_for_nerds"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        app:layout_constraintBottom_toTopOf="@id/a_square_seek"
        android:background="@color/md_white_1000"
        android:layout_width="match_parent"
        android:layout_height="2dp" />

    <SeekBar
        android:id="@+id/a_square_seek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/view_size_2"
        app:layout_constraintBottom_toTopOf="@+id/a_square_button"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>